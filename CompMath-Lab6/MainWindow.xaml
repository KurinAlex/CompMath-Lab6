<Window x:Class="CompMath_Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:CompMath_Lab6"
        mc:Ignorable="d"
        Title="Lab 6" Height="420" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <oxy:PlotView x:Name="plot" />

        <StackPanel Grid.Column="1">
            <Label Content="n:"></Label>
            <TextBox Text="{Binding ElementName=nInput,Path=Value}" TextChanged="TextBox_TextChanged" />
            <Slider x:Name="nInput" Minimum="2" Maximum="100" Value="2" ValueChanged="UpdateModel" IsSnapToTickEnabled="True" />
            <Label Content="a:"></Label>
            <TextBox x:Name="aInput" Text="1" TextChanged="UpdateModel" />
            <Label Content="b:"></Label>
            <TextBox x:Name="bInput" Text="6" TextChanged="UpdateModel" />
            <Button Content="Download data" Click="DownloadData"/>
        </StackPanel>
    </Grid>
</Window>
